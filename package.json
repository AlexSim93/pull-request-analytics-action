{
  "name": "pull-request-analytics-action",
  "version": "4.8.0",
  "description": "Generates detailed PR analytics reports within GitHub, focusing on review efficiency and team performance.",
  "main": "build/index.js",
  "scripts": {
    "start": "node ./build/index.js",
    "build": "tsc && ncc build ./dist/index.js -o build",
    "tsc": "tsc",
    "lint": "eslint ./src/**/*.ts",
    "test": "TZ=utc WEEKENDS=0,6 jest",
    "test:watch": "TZ=utc WEEKENDS=0,6 jest --watch",
    "prepare": "husky install"
  },
  "author": "Aleksei Simatov",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@octokit/plugin-throttling": "^8.1.3",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "lodash": "^4.17.21",
    "mixpanel": "^0.18.0",
    "octokit": "^3.1.2"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.2",
    "@types/jest": "^29.5.10",
    "@types/lodash": "^4.17.7",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.54.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  }
}
